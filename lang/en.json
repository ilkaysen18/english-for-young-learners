/* =========================================================
   GLOBAL STYLES (light+dark, responsive, navbar, WhatsApp)
   ========================================================= */
:root{
  --bg: #f6f7fb;
  --card:#ffffff;
  --muted:#6b7280;
  --accent:#2563eb;
  --whatsapp:#25D366;
  --nav-bg:#ffffff;
  --text:#0f172a;
  --shadow:0 6px 18px rgba(16,24,40,0.08);
  --radius:12px;
  --glass: rgba(255,255,255,0.6);
  transition: background .3s, color .3s;
  font-family: 'Inter', system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
}

/* DARK MODE VARIABLES */
:root[data-theme="dark"]{
  --bg: #0b1220;
  --card: #071021;
  --muted: #98a0b4;
  --accent: #60a5fa;
  --nav-bg: rgba(7,10,20,0.85);
  --text: #e6eefc;
  --glass: rgba(8,12,20,0.6);
}

/* RESET */
*{box-sizing:border-box}
html,body{height:100%;margin:0;background:linear-gradient(180deg,var(--bg),#eef2ff);color:var(--text);-webkit-font-smoothing:antialiased;}
a{color:inherit;text-decoration:none}
button{font:inherit;cursor:pointer;border:0;background:transparent}

/* LAYOUT HELPERS */
.container{max-width:1200px;margin:0 auto;padding:16px}
.visually-hidden{position:absolute!important;height:1px;width:1px;overflow:hidden;clip:rect(1px,1px,1px,1px);white-space:nowrap}

/* NAVBAR */
.global-nav-wrapper{position:sticky;top:0;z-index:999;background:var(--nav-bg);backdrop-filter: blur(6px);box-shadow:0 6px 16px rgba(2,6,23,0.06);}
.global-nav{max-width:1200px;margin:0 auto;display:flex;align-items:center;justify-content:space-between;padding:12px 16px;gap:12px}
.nav-left{display:flex;align-items:center;gap:12px}
.brand{font-weight:800;color:var(--accent);font-size:1.05rem}
.controls-inline{display:flex;align-items:center;gap:10px}

/* nav links (desktop) */
.nav-links{display:flex;gap:12px;align-items:center}
.nav-links a{padding:8px 12px;border-radius:10px;font-weight:600;transition:background .15s}
.nav-links a:hover{background:rgba(37,99,235,0.06)}

/* language switcher + theme toggle */
.lang-switch, .theme-toggle{padding:6px;border-radius:8px;background:var(--card);box-shadow:var(--shadow);display:flex;align-items:center;gap:8px}
.lang-switch select{background:transparent;border:0;font-weight:700}
.theme-toggle button{padding:6px 8px;border-radius:8px;background:transparent;border:1px solid rgba(0,0,0,0.06)}

/* hamburger */
.nav-toggle{display:none;flex-direction:column;gap:5px;cursor:pointer}
.nav-toggle span{width:26px;height:3px;background:var(--text);border-radius:6px;display:block;}

/* mobile menu */
.mobile-menu{display:none;flex-direction:column;padding:12px;gap:10px;background:var(--nav-bg);box-shadow:0 10px 30px rgba(2,6,23,0.08)}
.mobile-menu a{padding:10px;border-radius:8px;font-weight:700}

/* HERO */
header.hero{padding:36px 16px;border-radius:0 0 18px 18px;background:linear-gradient(135deg,#F9D423,#1E90FF);color:#0b1533}
header.hero h1{margin:0;font-size:1.6rem;line-height:1.15}
header.hero .subtitle{margin-top:8px;opacity:.95}

/* CTA NAV (optional) */
.cta-buttons{display:flex;flex-wrap:wrap;gap:10px;padding:18px;justify-content:center}
.cta-buttons a{background:var(--card);padding:12px 14px;border-radius:12px;box-shadow:var(--shadow);font-weight:700}

/* TEACHERS GRID */
.grid{display:grid;grid-template-columns:1fr;gap:14px;margin:20px 0}
.card{background:var(--card);padding:14px;border-radius:var(--radius);box-shadow:var(--shadow);display:flex;gap:12px;align-items:flex-start}
.avatar{width:72px;height:72px;border-radius:10px;display:grid;place-items:center;background:linear-gradient(135deg,#e6eefc,#f7f9ff);font-weight:700;color:var(--accent)}
.info{flex:1}
.name{font-weight:800}

/* EMPTY */
.empty{padding:28px;text-align:center;color:var(--muted);background:linear-gradient(180deg,#fff,#fbfdff);border-radius:10px;border:1px dashed #e6ecff}

/* MODAL */
.modal-backdrop{position:fixed;inset:0;background:rgba(2,6,23,0.45);display:none;align-items:center;justify-content:center;padding:16px;z-index:1200}
.modal{max-width:920px;width:100%;background:var(--card);border-radius:12px;padding:18px;box-shadow:0 12px 40px rgba(2,6,23,0.35)}

/* WHATSAPP FLOAT */
.wa-bar{position:fixed;bottom:20px;right:20px;background:var(--whatsapp);color:#fff;padding:14px 18px;border-radius:40px;font-weight:800;cursor:pointer;box-shadow:0 8px 30px rgba(37,211,102,0.16);z-index:1200;display:flex;align-items:center;gap:10px}
.wa-bar img{width:20px;height:20px}
.wa-bar:hover{transform:scale(1.04)}
/* pulse + glow */
.wa-bar{animation:waPulse 2.2s infinite ease-in-out, waGlow 2s infinite ease-in-out}
@keyframes waPulse{0%,100%{transform:scale(1)}50%{transform:scale(1.06)}}
@keyframes waGlow{0%{box-shadow:0 6px 18px rgba(37,211,102,0.18)}50%{box-shadow:0 12px 40px rgba(37,211,102,0.34)}100%{box-shadow:0 6px 18px rgba(37,211,102,0.18)}}

/* SCROLL TOP BUTTON */
#scroll-top-btn{position:fixed;right:20px;bottom:90px;width:52px;height:52px;border-radius:12px;background:var(--accent);color:#fff;display:none;align-items:center;justify-content:center;font-weight:800;z-index:1200;box-shadow:var(--shadow);cursor:pointer;transition:transform .18s}
#scroll-top-btn.show{display:flex}

/* small screens */
@media (max-width:900px){
  .grid{grid-template-columns:repeat(2,1fr)}
}
@media (max-width:720px){
  .grid{grid-template-columns:1fr}
  .nav-links{display:none}
  .nav-toggle{display:flex}
  .container{padding:12px}
  header.hero{padding:26px}
}

/* accessibility focus */
a:focus, button:focus, .card:focus { outline: 3px solid rgba(37,99,235,0.18); outline-offset:2px}

<script>
let current='course';
function showPage(id){
  document.getElementById(current).classList.add('hidden');
  document.getElementById(current).classList.remove('visible');
  const next=document.getElementById(id);
  next.classList.remove('hidden');
  next.classList.add('visible');
  current=id;
}
function goCourse(){showPage('course');}
function goLesson(n){showPage('lesson'+n);}
</script>
